  <div id="content">
    <div class="container mt-2">
      <div class="row">
        <div class="col-lg-12 ">
          <!-- breadcrumb-->
          <nav aria-label="breadcrumb">
            <ol class="breadcrumb">
              <li class="breadcrumb-item"><a href="#">Home</a></li>
              <li aria-current="page" class="breadcrumb-item active">Login</li>
            </ol>
          </nav>
        </div>
        <div class="col-lg-6 mx-auto d-flex justify-content-center">
          <div class="box">
            <h1>Login</h1>
           <p class="lead">Already a user?</p>
          <p class="text-muted">Welcome back! Please enter your email address and password to access your account. If you are new here, click the "Sign up" link below to create an account.</p>
            <hr>
            <form id="login-form" action="/api/user/login" method="post">
              <div class="form-group">
                <label for="email">Email</label>
                <input id="email" type="text" class="form-control">
              </div>
              <div class="form-group">
                <label for="password">Password</label>
                <input id="password" type="password" class="form-control">
              </div>
              <div class="text-center">
                <button type="submit" class="btn btn-primary mt-2" id="loginbtn"><i class="fa fa-user-md"></i> Enter</button>
              </div>
            </form>

            <div class="text-center mt-2">
              <a href="/forgot-password">Restore Password</a>
              <a href="/register">Not a member? Sign up.</a>
            </div>
            <div class="row mt-2">
              <div class="col-6 d-flex justify-content-center">
                <div class="text-center">
                  <a href='api/user/github'>
                    <button class="mx-auto loginButton" style="background-color: white; border: none;">
                      <img src="https://img.icons8.com/fluent/48/000000/github.png" title="Login with github"/>
                    </button>
                  </a>
                </div>
              </div>
              <div class="col-6 d-flex justify-content-center">
                <div class="text-center">
                  <a href='api/user/google'>
                    <button class="mx-auto loginButton" style="background-color: white; border: none;">
                      <img src="https://img.icons8.com/fluent/48/000000/google-logo.png" title="Login with google"/>
                    </button>
                  </a>
                </div>
              </div>
            </div>
          </div>

        </div>
      </div>
    </div>
  </div>
